.row
  .col-md-12
    %section.panel
      %header.panel-heading
        Listagem de Botões
        = link_to "novo botão", new_button_path, class: "btn btn-success pull-right btn-xs"
      .panel-body
        %table.table.table-condensed.table-striped
          %thead
            %tr
              %th Página 
              %th Título
              %th Ordem
              %th Ativo?
              %th Imagem
              %th Ações
          %tbody
            - @buttons.each do |button|
              %tr
                %td.col-md-1= button.code
                %td.col-md-4= button.title
                %td.col-md-1
                  %span.label.label-info= "#{button.order} º"
                %td.col-md-1= button.status ? "<span class='label label-success'>Sim</span>".html_safe : "<span class='label label-danger'>Não</span>".html_safe
                %td.col-md-3= image_tag button.image_path_url, width: 30, height: 30, class: 'img-circle' if button.image_path?
                %td.col-md-2
                  =link_to "editar", edit_button_path(button), class: 'btn btn-info btn-xs'
                  =link_to "excluir", button_path(button), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: t(:confirm)}     
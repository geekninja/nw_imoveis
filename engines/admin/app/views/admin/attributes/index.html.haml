.row
  .col-md-12
    %section.panel
      %header.panel-heading
        Listagem de Attributes de Imóvel
        = link_to "novo attributo", new_attribute_path, class: "btn btn-success pull-right btn-xs"
      .panel-body
        %table.table.table-condensed.table-striped
          %thead
            %tr
              %th Nome
              %th Status
              %th Ações
          %tbody
            - @attributes.each do |attribute|
              %tr
                %td= attribute.name
                %td.col-md-2= attribute.status ? 'ativo' : 'inativo'
                %td.col-md-2
                  =link_to "editar", edit_attribute_path(attribute), class: 'btn btn-info btn-xs'
                  =link_to "excluir", attribute_path(attribute), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: t(:confirm)}